<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.Evaluation_dialog"
    android:background="@color/white">


    <TextView
        style="@style/evaluation_all_activity_header_text_view"
        android:id="@+id/evaluation_dialog_title_text_view"
        android:text="@string/about_all_activity_comment_text_view"

        />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/evaluation_dialog_title_text_view"
        android:padding="10dp"
        >



        <com.google.android.material.textfield.TextInputLayout
            style="@style/contact_us_input_text_layout"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:startIconTint="@color/light_golden"

            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_comment_dialog_comment_edit_text"
                style="@style/about_all_activity_edit_texts"

                />
        </com.google.android.material.textfield.TextInputLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/evaluation_dialog_rating_bar"
            android:orientation="horizontal"
            android:id="@+id/evaluation_dialog_note_linear"
            android:layout_marginTop="10dp"
            >



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/evaluation_dialog_note_linear"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/evaluation_dialog_buttons_linear"
            >

            <Button
                style="@style/about_all_activity_buttons"
                android:text="@string/comment"
                android:id="@+id/add_comment_dialog_comment_button"
                android:layout_centerHorizontal="true"
                android:drawableRight="@drawable/comment_icon"                />

            <Button
                style="@style/about_all_activity_buttons"
                android:text="@string/about_all_activity_cancel_button"
                android:id="@+id/add_comment_dialog_cancel_button"
                android:drawableRight="@drawable/cancel_icon"

                />


        </LinearLayout>






    </LinearLayout>

</RelativeLayout>