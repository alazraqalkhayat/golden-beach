<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="8dp"
    android:id="@+id/watching_list_items_card_view"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:background="@color/login_scroll_color"
    >

        <androidx.cardview.widget.CardView
            style="@style/watching_list_fragment_counter_card_view"

            >

            <TextView
                style="@style/watching_list_fragment_counter_text_view"
                android:id="@+id/watching_list_items_count_text_view"
                android:text="3"

                />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:id="@+id/watching_list_items_linear"
                android:layout_weight="1"

                >
                <TextView
                    style="@style/watching_list_fragment_name_of_all_text_view"
                    android:text="moaid alkhayat"
                    android:id="@+id/watching_list_items_name_text_view"

                    />

                <TextView
                    style="@style/watching_list_fragment_session_of_all_text_view"
                    android:id="@+id/watching_list_items_session_text_view"
                    android:text="3"


                    />




            </LinearLayout>

            <CheckBox
                style="@style/watching_list_fragment_check_box"
                android:id="@+id/watching_list_items_check_box"
                android:layout_toEndOf="@id/watching_list_items_linear"
                />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>