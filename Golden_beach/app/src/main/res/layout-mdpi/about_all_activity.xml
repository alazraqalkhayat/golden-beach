<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.About_all_activity"

    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:background="@drawable/shape_of_zontoba"
        android:backgroundTint="@android:color/transparent"
        android:layout_marginBottom="5dp"
        >

        <ImageView
            style="@style/add_new_post_back_image_view"
            android:id="@+id/about_all_activity_back_image_view"
            android:layout_gravity="fill_horizontal"

            />

        <ImageView
            style="@style/add_new_post_back_image_view"
            android:id="@+id/about_all_activity_home_image_view"
            android:layout_gravity="fill_horizontal"
            android:src="@drawable/home_icon_golden"

            />
    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:padding="10dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_marginEnd="5dp"
            android:id="@+id/all_list_items_card_view"

            >


            <ImageView
                style="@style/about_all_activity_image_of_all"
                android:id="@+id/about_movie_activity_movie_image_image_view"
                android:src="@drawable/logo"

                />
        </androidx.cardview.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            >


            <TextView
                style="@style/about_all_activity_name_of_all_text_view"
                android:id="@+id/about_movie_activity_movie_name_text_view"
                android:text="moaid"

                />

            <TextView
                style="@style/about_all_activity_category_of_all_text_view"
                android:id="@+id/about_movie_activity_movie_name_category"
                android:text="movies"

                />

            <TextView
                android:id="@+id/about_all_activity_season_no_text_view"
                style="@style/about_all_activity_seasons_of_all_text_view_"
                android:text="@string/about_all_activity_seasons_no"
                android:textSize="10sp"
                android:layout_marginTop="10dp"

            />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/black_with_opacity"
        />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    >

                    <TextView
                        android:id="@+id/about_all_activity_rating_bar_text_view"
                        style="@style/about_all_activity_rating_bar_text_view"
                        android:text="0.5"
                        />
                    <RatingBar
                        style="@style/about_all_activity_rating_bar"
                        android:id="@+id/about_all_activity_rating_bar"
                    />


                </LinearLayout>

                <LinearLayout
                    style="@style/zontoba_linear_layout"
                    android:background="@drawable/shape_of_zontoba">

                    <TextView
                        style="@style/zontoba_text_view"
                        android:text="@string/story" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"

                    >

                    <TextView
                        android:id="@+id/about_movie_activity_movie_story_text_view"
                        style="@style/about_all_activity_story_text_view"
                        android:textAllCaps="true"
                        />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="5dp"


                    >
                    <androidx.cardview.widget.CardView
                        style="@style/about_all_activity_card_views"
                        android:id="@+id/about_all_activity_add_to_watching_list_card_view"
                        >

                        <LinearLayout
                            style="@style/about_all_activity_card_views_linear_layout"
                            android:padding="1dp"

                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:src="@drawable/add_icon"
                                />
                            <View
                                style="@style/about_all_activity_card_views_inside_views"
                                />
                            <TextView
                                style="@style/about_all_activity_card_views_text_views"
                                android:text="@string/about_all_activity_add_to_watching_list_button"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/about_all_activity_card_views"
                        android:id="@+id/about_all_activity_watch_trailer_card_view"

                        >

                        <LinearLayout
                            style="@style/about_all_activity_card_views_linear_layout"

                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:src="@drawable/vidio_icon"
                                />
                            <View
                                style="@style/about_all_activity_card_views_inside_views"
                                />
                            <TextView
                                style="@style/about_all_activity_card_views_text_views"
                                android:text="@string/about_all_activity_watch_trailer_button"
                                android:padding="5dp"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        style="@style/about_all_activity_card_views"
                        android:id="@+id/about_all_activity_ratting_card_view"

                        >

                        <LinearLayout
                            style="@style/about_all_activity_card_views_linear_layout"

                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:src="@drawable/star_icon_golden"
                                />
                            <View
                                style="@style/about_all_activity_card_views_inside_views"
                                />
                            <TextView
                                style="@style/about_all_activity_card_views_text_views"
                                android:text="@string/about_all_activity_evaluate_button"
                                android:padding="8dp"


                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        style="@style/about_all_activity_card_views"
                        android:id="@+id/about_all_activity_comment_card_view"
                        android:layout_marginEnd="3dp"

                        >

                        <LinearLayout
                            style="@style/about_all_activity_card_views_linear_layout"

                            >
                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="35dp"
                                android:src="@drawable/comment_icon"
                                />
                            <View
                                style="@style/about_all_activity_card_views_inside_views"
                                />
                            <TextView
                                style="@style/about_all_activity_card_views_text_views"
                                android:text="@string/about_all_activity_comment_text_view"
                                />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>



                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:background="@color/black_with_opacity" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal"
                    android:background="@drawable/shape_of_contact_us_edit_text"
                    android:elevation="10dp">




                    <TextView
                        style="@style/about_all_activity_show_and_hidden_text_view"
                        android:id="@+id/about_all_activity_show_hide_comments_text_view"

                        />

                    <ImageView
                        android:id="@+id/about_all_activity_show_hide_comments_image_view"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/row_down_icon"

                        />


                </LinearLayout>

                <View
                    android:id="@+id/about_all_activity_view"
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/black_with_opacity" />

                <LinearLayout
                    android:id="@+id/about_all_activity_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:visibility="gone">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/about_all_activity_recycle_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />

                    <ProgressBar
                        style="@style/all_list_activity_load_more_progress_bar"
                        android:id="@+id/about_all_activity_load_more_progress_bar"

                        />

                    <ImageView
                        style="@style/all_list_activity_reload_image_view"
                        android:id="@+id/about_all_activity_reload_image_view"

                        />


                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>