<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.contact_us.Contact_us_fragment">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content">


     <ImageView
        style="@style/contact_us_image_views"
         android:id="@+id/contact_us_logo_image_view"
         >

     </ImageView>


     <ScrollView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_below="@id/contact_us_logo_image_view"
         android:layout_marginTop="50dp"

         >

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:id="@+id/contact_us_linear"
         android:orientation="vertical"
         android:padding="10dp"
         >

         <TextView
             style="@style/contact_us_text_views"
             android:text="@string/contact_us_manager_name_text_view"

             />

         <com.google.android.material.textfield.TextInputLayout
             style="@style/contact_us_input_text_layout"
             app:startIconDrawable="@drawable/person_icon_golden"
             app:startIconTint="@color/light_golden"


             >

             <com.google.android.material.textfield.TextInputEditText
                 style="@style/contact_us_edit_texts"
                 android:inputType="text"
                 android:enabled="false"
                 android:text="@string/contact_us_manager_name_edit_text"



                 />
         </com.google.android.material.textfield.TextInputLayout>


         <TextView
             style="@style/contact_us_text_views"
             android:text="@string/contact_us_phone_number_text_view"

             />

         <com.google.android.material.textfield.TextInputLayout
             style="@style/contact_us_input_text_layout"
             android:id="@+id/contact_us_phone_number_edit_text"
             app:startIconDrawable="@drawable/phone_icon_golden"
             >

             <com.google.android.material.textfield.TextInputEditText
                 style="@style/contact_us_edit_texts"
                 android:inputType="text"
                 android:enabled="false"
                 android:text="@string/contact_us_phone_number_edit_text"

                 />
         </com.google.android.material.textfield.TextInputLayout>



         <TextView
             style="@style/contact_us_text_views"
             android:text="@string/contact_us_email_text_view"

             />


         <com.google.android.material.textfield.TextInputLayout
             style="@style/contact_us_input_text_layout"
             android:id="@+id/contact_us_email_edit_text"
             app:startIconDrawable="@drawable/email_icon_golden"
             >

             <com.google.android.material.textfield.TextInputEditText
                 style="@style/contact_us_edit_texts"
                 android:inputType="none"
                 android:enabled="false"
                 android:text="@string/contact_us_email_edit_text"

                 />
         </com.google.android.material.textfield.TextInputLayout>


         <TextView
             style="@style/contact_us_text_views"
             android:text="@string/contact_us_place_text_view"

             />
         <com.google.android.material.textfield.TextInputLayout
             style="@style/contact_us_input_text_layout"
             app:startIconDrawable="@drawable/place_icon_golden"
             >

             <com.google.android.material.textfield.TextInputEditText
                 style="@style/contact_us_edit_texts"
                 android:inputType="none"
                 android:enabled="false"
                 android:text="@string/contact_us_place_edit_text"

                 />
         </com.google.android.material.textfield.TextInputLayout>





     </LinearLayout>


     </ScrollView>
 </RelativeLayout>

</FrameLayout>