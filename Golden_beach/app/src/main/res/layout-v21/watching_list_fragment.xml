<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.watching_list.Watching_list_fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/watching_list_list_view"
        />

    </LinearLayout>

    <TextView
        style="@style/watching_list_fragment_have_not_added_text_view"
        android:id="@+id/watching_list_no_items_text_view"

    />

</FrameLayout>