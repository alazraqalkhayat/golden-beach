<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        style="@style/suggestions_and_complainants_card_views"
        android:id="@+id/base_complainants_items_complainant_card_view"

    >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
        >

            <de.hdodenhof.circleimageview.CircleImageView
                style="@style/suggestions_and_complainants_image_view"
                android:id="@+id/base_complainants_items_image_of_user"

            />

            <TextView
                style="@style/suggestions_and_complainants_recycle_view_user_name_text_view"
                android:id="@+id/base_complainants_items_user_name_text_view"
                android:text="user name"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/base_complainants_items_image_of_user"
                android:layout_marginStart="20dp"
            />



            <TextView
                style="@style/suggestions_and_complainants_recycle_view_complainant_text_view"
                android:id="@+id/base_complainants_items_complainant_text_view"
                android:text="user name"
                android:layout_below="@id/base_complainants_items_image_of_user"


            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/base_complainants_items_user_id_text_view"
                android:visibility="gone"

            />

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>