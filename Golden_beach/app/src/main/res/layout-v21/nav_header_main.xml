<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:background="@color/white"
>






    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nave_header_user_image_view"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/shape_of_circle_image_view"
        android:contentDescription="@string/nav_header_desc"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/user_image"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/nav_header_small_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_blue"
        android:fontFamily="@font/wellfleet"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="@string/nav_header_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:layout_below="@id/nave_header_user_image_view"
    />


    <TextView
        android:id="@+id/nav_header_large_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_blue_with_opacity"
        android:text="@string/nav_header_subtitle"
        android:layout_below="@id/nav_header_small_text_view"
        android:fontFamily="@font/inika"
        android:layout_marginTop="5dp"
    />


</RelativeLayout>
