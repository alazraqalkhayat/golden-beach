<?xml version="1.0" encoding="utf-8"?>


    <androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="180dp"
        android:layout_height="260dp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp"
        app:cardElevation="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:id="@+id/all_list_items_card_view"



        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

        <ImageView
            style="@style/all_list_activity_list_items_all_image_view"
            android:id="@+id/items_image_image_view"

            />


            <TextView
                style="@style/all_list_activity_list_items_name_of_all_text_view"
                android:id="@+id/items_name_text_view"
                android:text="asdfsdf"
                />

            <TextView
                style="@style/all_list_activity_list_items_year_of_all_text_view"
                android:id="@+id/items_year_text_view"
                android:text="asdfsdf"

                />

        </LinearLayout>


        <!--GONE DETAILS OF MOVIE-->

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:background="@drawable/shape_of_posts"
            android:visibility="gone"

            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/items_name_of_image_text_view"

            />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/items_id_text_view"


                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/items_name_of_section_text_view"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/items_brand_of_section_text_view"

            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/items_name_of_category_text_view"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/items_session_text_view"

            />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/items_story_text_view"


                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/items_trailer_uri_text_view"

                />




            <Button
                style="@style/posts_items_see_more_details_button"
                android:id="@+id/items_see_more_details_button"

            />


        </LinearLayout>




    </androidx.cardview.widget.CardView>

