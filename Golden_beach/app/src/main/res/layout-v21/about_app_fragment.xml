<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.about_app.About_app_fragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >

        <androidx.cardview.widget.CardView
            style="@style/admin_control_panel_basic_card_view"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    style="@style/admin_control_panel_card_view_of_image_views"

                    >
                    <ImageView
                        style="@style/admin_control_panel_image_views"
                        android:src="@drawable/rate_app_icon"
                        />


                </androidx.cardview.widget.CardView>



                <TextView
                    style="@style/admin_control_panel_text_views"
                    android:id="@+id/about_app_fragment_evaluation_app_text_view"
                    android:text="@string/about_app_fragment_evaluation_app_text_view"
                    />




            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/admin_control_panel_basic_card_view"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    style="@style/admin_control_panel_card_view_of_image_views"
                    >
                    <ImageView
                        style="@style/admin_control_panel_image_views"
                        android:src="@drawable/ic_menu_share"
                        />


                </androidx.cardview.widget.CardView>



                <TextView
                    style="@style/admin_control_panel_text_views"
                    android:id="@+id/about_app_fragment_share_app_text_view"
                    android:text="@string/about_app_fragment_share_app_text_view"
                    />




            </LinearLayout>


        </androidx.cardview.widget.CardView>




    </LinearLayout>

</FrameLayout>